@{
    ViewData["Title"] = "Add QuestionType";
    Layout = "~/Views/shared/_Layout.cshtml";
}

@model InterviewQuestionPortal.Areas.QuestionType.Models.QuestionTypeModel

<main class="main" id="main">
    <div class="row">
        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="">Add QuestionType</h5>
                     
                    </div>
                    <div class="card-body">
                        <form>
                            @Html.HiddenFor(x=>x.QuestionTypeID)
                            
                            <div class="form-floating form-floating-outline mb-4">
                                <input required type="text" asp-for="QuestionType" class="form-control" id="basic-default-fullname" placeholder="Enter QuestionType" />
                                <label for="basic-default-fullname"><span class="text-danger">*</span>QuestionType</label>
                                <span asp-validation-for="QuestionType" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary" asp-area="QuestionType" asp-controller="QuestionType" asp-action="Save">Submit</button>
                            <a class="btn btn-primary" asp-area="QuestionType" asp-controller="QuestionType" asp-action="QuestionTypeList">Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
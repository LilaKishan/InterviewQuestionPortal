@{
    ViewData["Title"] = "Add Subject";
    Layout = "~/Views/shared/_Layout.cshtml";
}

@model InterviewQuestionPortal.Areas.Subject_Master.Models.SubjectModel

<main class="main" id="main">
    <div class="row">
        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Add Subject</h5>
                        @*<small class="text-muted float-end">Default label</small>*@
                    </div>
                    <div class="card-body">
                        <form>
                            @Html.HiddenFor(x=>x.SubjectID)
                            
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" asp-for="SubjectName" class="form-control" placeholder="Enter SubjectName" required />
                                <label for="basic-default-fullname">SubjectName</label>
                                <span asp-validation-for="SubjectName" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary" asp-area="Subject_Master" asp-controller="Subject" asp-action="Save">Submit</button>
                            <button type="submit" class="btn btn-primary" asp-area="Subject_Master" asp-controller="Subject" asp-action="SubjectList">Back</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
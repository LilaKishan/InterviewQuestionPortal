@{
    ViewData["Title"] = "Account Page";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}
@using InterviewQuestionPortal.BAL
@model InterviewQuestionPortal.Areas.MST_User.Models.MST_UserModel


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Account Settings /</span> Account</h4>

    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-pills flex-column flex-md-row mb-4 gap-2 gap-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" ><i class="mdi mdi-account-outline mdi-20px me-1"></i>Account</a>
                </li>
                @*<li class="nav-item">
                <a class="nav-link" href="pages-account-settings-notifications.html"><i class="mdi mdi-bell-outline mdi-20px me-1"></i>Notifications</a>
